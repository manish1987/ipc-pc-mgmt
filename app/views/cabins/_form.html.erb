<%= form_for @cabin, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :cabin_no, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :cabin_no, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :district, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :district, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cabins_path, :class => 'btn' %>
  </div>
<% end %>
