<%- model_class = Cabin -%>
<div class="page-header">
  <h2>Prayer Cabin Information<br><small>Intercessory Prayer Center </small></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:cabin_no) %></th>
      <th><%= model_class.human_attribute_name(:district) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cabins.each do |cabin| %>
      <tr>
        <td><%= link_to cabin.cabin_no , cabin_path(cabin) %></td>
        <td><%= cabin.district %></td>
        <td><%= cabin.state %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_cabin_path(cabin), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      cabin_path(cabin),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_cabin_path,
            :class => 'btn btn-primary' %>
