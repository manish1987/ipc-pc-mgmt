<%- model_class = Cabin -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human %></h3>
</div>

<table class="table">
  <td><strong><%= model_class.human_attribute_name(:cabin_no) %>:</strong></td>
  <td><%= @cabin.cabin_no %></td>
  <td><strong><%= model_class.human_attribute_name(:district) %>:</strong></td>
  <td><%= @cabin.district %></td>
  <td><strong><%= model_class.human_attribute_name(:state) %>:</strong></td>
  <td><%= @cabin.state %></td>
  <td><strong>Sessions:</strong></td>
  <td><%= @cabin.sessions.length %></td>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cabins_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cabin_path(@cabin), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cabin_path(@cabin),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
