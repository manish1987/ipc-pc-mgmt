<%= form_for @warrior, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field span4', :required=>"true" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :church, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :church, :class => 'text_field span4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field span4', :required=>"true" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :referrer, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :referrer, :class => 'text_field span4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :region_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :region_id, options_from_collection_for_select(@regions, "id", "name",:selected=>@warrior_region), { :style=>"width:250px"  ,:class=>"chzn-select"}%>
    </div>
  </div>
  <hr>
  <div class="control_group">
    <%= f.fields_for :address do |form| %>
      <%= form.label :address, :class => 'control-label' %>
      <div class="controls controls-row">
        <%= form.text_field :addr_1, :class=> 'text_field span4',:placeholder=>"Address Line 1" %>
        <br><br>
        <%= form.text_field :addr_2, :class=> 'text_field span4',:placeholder=>"Address Line 2" %>
        <br><br>
        <%= form.text_field :city, :class=> 'text_field span2',:placeholder=>"City" %>
        <%= form.text_field :pin_code, :class=> 'text_field span2',:placeholder=>"Pin Code" %>
        <br><br>
        <%= form.text_field :country, :class=> 'text_field span3',:placeholder=>"Country" %>
    <%end%>
  </div>
  <hr>
    <div class="control-group">
    <%= f.label "Prayer Commitment", :class => 'control-label' %>
    <div class="controls">
      <%= f.select :commitment,
       options_for_select([["No Commitments",-1],
                           ["Monthly",0],
                           ["Every Sunday",1],
                           ["Every Monday",2],
                           ["Every Tuesday",3],
                           ["Every Wednesday",4],
                           ["Every Thursday",5],
                           ["Every Friday",6],
                           ["Every Saturday",7] ],:selected=>@warrior.commitment)
      %>
    </div>
  </div>



  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to "Cancel",
                :back,:id=>@warrior.id, :class => 'btn' %>
  </div>
<% end %>

<script>
$(document).ready(function(){

  $("#warrior_region_id").attr("class","chzn-select");
  $("#warrior_region_id").attr("style","width:250px");
  $("#warrior_region_id").attr("data-placeholder","Choose Region");
});
</script>
