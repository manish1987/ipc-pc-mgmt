<%- model_class = Warrior -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:church) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:referrer) %></th>
      <th><%= model_class.human_attribute_name(:warrior_no) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @warriors.each do |warrior| %>
      <tr>
        <td><%= link_to warrior.id, warrior_path(warrior) %></td>
        <td><%= warrior.name %></td>
        <td><%= warrior.church %></td>
        <td><%= warrior.phone %></td>
        <td><%= warrior.referrer %></td>
        <td><%= warrior.warrior_no %></td>
        <td><%=l warrior.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_warrior_path(warrior), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      warrior_path(warrior),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_warrior_path,
            :class => 'btn btn-primary' %>
